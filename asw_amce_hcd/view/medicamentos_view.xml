<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_medicamentos" model="ir.ui.view">
            <field name="name">Medicamentos</field>
            <field name="model">asw.medicamentos</field>
            <field name="arch" type="xml">
                <form string="Medicamentos">
                    <sheet>
                        <group string="Descripcion" col='4'>
                            <field name="medicamentos_nombre" />
                            <field name="medicamentos_codigo" />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_medicamentos" model="ir.ui.view">
            <field name="name">Medicamentos</field>
            <field name="model">asw.medicamentos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="medicamentos_nombre" />
                    <field name="medicamentos_codigo" />
                </tree>
            </field>
        </record>

        <record id="view_search_medicamentos" model="ir.ui.view">
            <field name="name">Medicamentos</field>
            <field name="model">asw.medicamentos</field>
            <field name="arch" type="xml">
                <search>
                    <field name="medicamentos_nombre" />
                    <field name="medicamentos_codigo" />
                </search>
            </field>
        </record>

        <record id="action_medicamentos_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Medicamentos</field>
            <field name="res_model">asw.medicamentos</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>