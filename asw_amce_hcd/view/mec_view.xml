<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_mec" model="ir.ui.view">
            <field name="name">Mecanismo</field>
            <field name="model">asw.mec</field>
            <field name="arch" type="xml">
                <form string="Mecanismo">
                    <sheet>
                        <group string="Descripcion">
                            <field name="mec_nombre" />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_mec" model="ir.ui.view">
            <field name="name">Mecanismo</field>
            <field name="model">asw.mec</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mec_nombre" />
                </tree>
            </field>
        </record>

        <record id="view_search_mec" model="ir.ui.view">
            <field name="name">Mecanismo</field>
            <field name="model">asw.mec</field>
            <field name="arch" type="xml">
                <search>
                    <field name="mec_nombre" />
                </search>
            </field>
        </record>

        <record id="action_mec_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Mecanismo</field>
            <field name="res_model">asw.mec</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>