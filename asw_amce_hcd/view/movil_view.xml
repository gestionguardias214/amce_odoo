<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_movil" model="ir.ui.view">
            <field name="name">Moviles</field>
            <field name="model">asw.movil</field>
            <field name="arch" type="xml">
                <form string="Moviles">
                    <sheet>
                        <group string="Descripcion">
                            <field name="movil_nombre" required='1'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_movil" model="ir.ui.view">
            <field name="name">Moviles</field>
            <field name="model">asw.movil</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="movil_nombre" />
                </tree>
            </field>
        </record>

        <record id="view_search_movil" model="ir.ui.view">
            <field name="name">Moviles</field>
            <field name="model">asw.movil</field>
            <field name="arch" type="xml">
                <search>
                    <field name="movil_nombre" />
                </search>
            </field>
        </record>

        <record id="action_movil_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Moviles</field>
            <field name="res_model">asw.movil</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>