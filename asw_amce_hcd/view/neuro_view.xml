<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_neuro" model="ir.ui.view">
            <field name="name">Examen Neurologico</field>
            <field name="model">asw.neuro</field>
            <field name="arch" type="xml">
                <form string="Examen Neurologico">
                    <sheet>
                        <group string="Descripcion" col='4'>
                            <field name="neuro_nombre" />
                            <field name="opcion_doble" />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_neuro" model="ir.ui.view">
            <field name="name">Examen Neurologico</field>
            <field name="model">asw.neuro</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="neuro_nombre" />
                    <field name="opcion_doble" />
                </tree>
            </field>
        </record>

        <record id="view_search_neuro" model="ir.ui.view">
            <field name="name">Examen Neurologico</field>
            <field name="model">asw.neuro</field>
            <field name="arch" type="xml">
                <search>
                    <field name="neuro_nombre" />
                </search>
            </field>
        </record>

        <record id="action_neuro_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Examen Neurologico</field>
            <field name="res_model">asw.neuro</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>